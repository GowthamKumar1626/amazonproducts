header.header
    nav.nav.nav--tours
        a.nav__el(href="/categories") Good Styles
    .header__logo
        img(src="/img/icons/logo-black-white-round.png" alt="GoodStyles logo")
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Log out
            a.nav__el(href="/me") 
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                span= user.name.split(" ")[0]
        else
            a.nav__el(href="/login") Log in
            a.nav__el.nav__el--cta(href="#") Sign up